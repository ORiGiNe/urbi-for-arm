{
  \begin{titlepage}

    \ifx\empty\@titleImage\else%
      \begin{center}%
        \@titleImageInsert%
      \end{center}%
    \fi%

    \begin{center}
      {\Huge\bf\@title\\}
      \ifx\empty\@subtitle\else%
        \vspace{.5cm}
        \noindent\textbf{\LARGE \@subtitle}\par\nobreak%
      \fi%
      \ifx\empty\@author\else%
        \vspace{1cm}
        {\LARGE \@author\\}
      \fi%
      \ifx\empty\@date\else%
        \vspace{1cm}
        {\Large \@date\\}
      \fi%
      \ifx\empty\@abstract\else%
        \vfill
        \begin{abstractenv}
          \@abstract
        \end{abstractenv}
      \fi%
    \end{center}

    \vfill
    \vfill
    \vfill

    \begin{center}
      \includegraphics[width=.6\linewidth]{figs/gostai}
    \end{center}
  \end{titlepage}
}

